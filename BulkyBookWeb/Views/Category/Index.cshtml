@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> &nbsp; Create New Category</a>
        </div>
    </div>
</div>
<br/>
<table class="table table-boardered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Oder</th>
            <th>Created DateTime</th>
            <th style="text-align:center">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.DisplayOrder</td>
                <td>@item.CreatedDateTime</td>
                <td>
                    <div class="w-75 btn-group col-12" role="group">
                        <a class="btn btn-primary mx-2 col-4" asp-controller="Category" asp-action="Detail" asp-route-id="@item.Id">Detail</a>
                        <a class="btn btn-primary mx-2 col-4" asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil"></i> &nbsp;Edit</a> &nbsp;&nbsp;
                        <a class="btn btn-danger mx-2 col-4" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash3"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>